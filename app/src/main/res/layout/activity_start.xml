<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartActivity">

    <ScrollView
        android:id="@+id/StartScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fadeScrollbars="false"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@color/dark_blue"
        android:scrollbarTrackVertical="@color/grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/STCBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/yellow"
                android:text="@string/back"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/StartStageNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/stage1_start"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/StartPrevButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    app:icon="@drawable/ic_arrow_prev_foreground"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="90dp" />

                <LinearLayout
                    android:id="@+id/StartOrderLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/StartOrderLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="top|center_horizontal"
                        android:text="@string/start_order"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/StartOrder"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="53"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/StartCarNumLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/StartCarNumLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="top|center_horizontal"
                        android:text="@string/car_number"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/StartCarNum"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="59"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/StartNextButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    app:icon="@drawable/ic_arrow_next_foreground"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="90dp" />

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/StartTC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:fadeScrollbars="false"
                android:scrollbarStyle="insideInset"
                android:scrollbarThumbHorizontal="@color/dark_blue"
                android:scrollbarTrackHorizontal="@color/grey">

                <LinearLayout
                    android:id="@+id/StartTCHLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/StartTCBlue"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/STCTC1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/dark_blue"
                            android:gravity="center|top"
                            android:paddingLeft="3dp"
                            android:paddingTop="5dp"
                            android:paddingRight="3dp"
                            android:text="@string/TC1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/STCKM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@color/dark_blue"
                            android:gravity="center"
                            android:text="@string/stage1_km"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/STCTC2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/dark_blue"
                            android:gravity="bottom|center"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingBottom="5dp"
                            android:text="@string/TC2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/StartTCMain"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/StartTCRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:orientation="horizontal"
                            android:paddingTop="2dp">

                            <TextView
                                android:id="@+id/STCStageLabel1"
                                android:layout_width="175dp"
                                android:layout_height="match_parent"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="2dp"
                                android:text="@string/stage1"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/red"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCFinishTime"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/finish_time"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR1V1"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/StartTCRow2"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/STCDistance"
                                android:layout_width="125dp"
                                android:layout_height="match_parent"
                                android:gravity="top"
                                android:paddingLeft="2dp"
                                android:text="@string/stage1_distance"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/red"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCFinishTimeHours"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/backgroundh"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCFinishTimeMinutes"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/backgroundm"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCFinishTimeSeconds"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/backgrounds"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCFinishTimeMilliseconds"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/background10"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR2V1"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/STCFlag"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="6dp"
                                app:srcCompat="@drawable/flag" />

                            <View
                                android:id="@+id/STCR2V2"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/StartTCRow3"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/STCProvStart"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/prov_start"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR3V1"
                                android:layout_width="15dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/STCActualStart"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/actual_start"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR3V2"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/STCTargetTime"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/target_time"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR3V3"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/StartTCRow4"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/STCR4V1"
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/STCProvStartHours"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/backgroundh"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCProvStartMinutes"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/backgroundm"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/STCArrow1"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                app:srcCompat="@drawable/arrow1" />

                            <EditText
                                android:id="@+id/STCActualStartHours"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/blueh"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="2"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/STCActualStartMinutes"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bluem"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="2"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/STCArrow2"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                app:srcCompat="@drawable/arrow_with_flag" />

                            <TextView
                                android:id="@+id/STCTargetTimeHours"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="@string/stage1_target_time_hours"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/red"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCTargetTimeMinutes"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/border"
                                android:gravity="center"
                                android:text="@string/stage1_target_time_minutes"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textColor="@color/red"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/STCArrow3"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                app:srcCompat="@drawable/arrow1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/StartTCRow5"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/STCStageNumber"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/SS1"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR5V1"
                                android:layout_width="65dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/STCTimeTaken"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/time_taken"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR5V2"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/STCActualTime"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/actual_time"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR5V3"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/StartTCRow6"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/STCR6V1"
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <EditText
                                android:id="@+id/STCOval"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/oval"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="2"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/STCStop"
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="6dp"
                                app:srcCompat="@drawable/stop" />

                            <TextView
                                android:id="@+id/STCTimeTakenMinutes"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/backgroundm"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCTimeTakenSeconds"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/backgrounds"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCTimeTakenMilliseconds"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/background10"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR6V2"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/STCActualTimeHours"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/blueh"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/STCActualTimeMinutes"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bluem"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:textSize="30sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR6V3"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/StartTCRow7"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingBottom="2dp">

                            <TextView
                                android:id="@+id/STCStartOrder"
                                android:layout_width="110dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/start_order_caps"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR7V1"
                                android:layout_width="65dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/STCStageLabel2"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/stage1"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/STCR7V2"
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/STCNextTC"
                                android:layout_width="100dp"
